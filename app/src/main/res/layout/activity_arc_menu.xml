<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
              android:orientation="vertical"
              android:gravity="center"
              >



    <com.sa90.materialarcmenu.ArcMenu
        android:id="@+id/arcmenu_android_example_layout"
        android:layout_width="100px"
        android:layout_height="100px"
        app:menu_scr="@drawable/girl"
        app:menu_open="arc_right"
        app:menu_radius="100dp"
        app:menu_color="#5dddd3"


        >

        <ImageView
            android:id="@+id/fab_arc_menu_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/snapchat"
             />

        <ImageView
            android:id="@+id/fab_arc_menu_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook"/>

        <ImageView
            android:id="@+id/fab_arc_menu_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/youtube"
           />



    </com.sa90.materialarcmenu.ArcMenu>

    <com.sa90.materialarcmenu.ArcMenu
        android:id="@+id/arcmenu_android_example_layout2"
        android:layout_width="100px"
        android:layout_height="100px"
        app:menu_scr="@drawable/boy"
        app:menu_open="arc_right"
        app:menu_radius="100dp"
        app:menu_color="#90dfaa"


        >

        <ImageView
            android:id="@+id/fab_arc_menu_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/snapchat"
            />

        <ImageView
            android:id="@+id/fab_arc_menu_22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook"/>

        <ImageView
            android:id="@+id/fab_arc_menu_33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/youtube"
            />



    </com.sa90.materialarcmenu.ArcMenu>

</LinearLayout>